@model  Vidly.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Genre: <b>@Model.Genre</b></li>
    <li>Release Date: <b>@Model.ReleaseDate.ToLongDateString()</b></li>
    <li>Date Added: <b>@Model.DateAdded.ToLongDateString()</b></li>
    <li>Number In Stock: <b>@Model.NumberInStock</b></li>
</ul>

