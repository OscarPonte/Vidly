@model Vidly.Models.Customer

@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
<li>Membership Type: <b>@Model.MembershipType.Name</b></li>
@if (@Model.Birthday.HasValue)
{
    <li>Birthday: <b>@Model.Birthday.Value.ToShortDateString()</b></li>
}

</ul>